@{
    ViewBag.Title = "Nosotros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div id="formulario">

    @using (Html.BeginForm("Contacto", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <h2>Nosotros</h2>
        @Html.AntiForgeryToken()
        <h4>Acerca de Nosotros</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Mail", "Mail", new { @class = "label" })
            <div class="col-md-10">
                @Html.TextBox("txtMail", "uaibook@gmail.com", new { @readonly = "readonly", @class = "fields" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Direccion", "Direccion", new { @class = "label" })
            <div class="col-md-10">
                @Html.TextBox("txtDireccion", "Arias 3063 - Buenos Aires - Argentina", new { @readonly = "readonly", @class = "fields" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Telefono", "Telefono", new { @class = "label" })
            <div class="col-md-10">
                @Html.TextBox("txtTel", "5433-9188", new { @readonly = "readonly", @class = "fields" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Mail Soporte", "Mail Soporte", new { @class = "label" })
            <div class="col-md-10">
                @Html.TextBox("txtMailSoporte", "Soporte@Uaibook.com.ar", new { @readonly = "readonly", @class = "fields" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Mail Markenting", "Mail Marketing", new { @class = "label" })
            <div class="col-md-10">
                @Html.TextBox("txtMkt", "Marketing@Uaibook.com.ar", new { @readonly = "readonly", @class = "fields" })
            </div>
        </div>
      }


            <br />
        </div>
    <div id="map" style="width: 300px; height: 300px;"></div>

    @section Scripts
{
        <script src="http://maps.googleapis.com/maps/api/js"></script>

        <script>
            function initialize() {
                var mapProp = {
                    center: new google.maps.LatLng(51.508742, -0.120850),
                    zoom: 5,
                    mapTypeId: google.maps.MapTypeId.SATELLITE
                };
                var map = new google.maps.Map(document.getElementById("map"), mapProp);
            }
            google.maps.event.addDomListener(window, 'load', initialize);
        </script>
    }
