@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <div class="menu" id="par">
        <a href="~/Account/Register">
            <img class="icon" src="~/Content/image/icon5.png">
        </a>
        <p class="texto">Registrarse</p>
        
    </div>
    <div class="menu" id="impar">
        <a href="~/Account/Login">
            <img class="icon" src="~/Content/image/icon6.png">
        </a>
        <p class="texto">Iniciar sesión</p>

    </div>
</ul>
}
